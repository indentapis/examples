{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "include": ["./src/**/*", "./scripts/*"]
}
